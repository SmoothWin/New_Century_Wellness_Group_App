<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.AddPatientView.AddPatientFragment" >

    <TextView
        android:id="@+id/text_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="20dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!-- ============ First Name ================ -->
    <EditText
        android:id="@+id/name_edt"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter name:">

        <requestFocus />
    </EditText>



    <!-- ============ Date of birth ================ -->
    <EditText
        android:id="@+id/dateOfBirthEdt"
        android:layout_width="340dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Date of birth:">
    </EditText>


    <!-- ============ Phone Number ================ -->
    <EditText
        android:id="@+id/phone_edt"
        android:layout_width="340dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Enter phone:" >
    </EditText>

    <!-- ============ Email ================ -->
    <EditText
        android:id="@+id/email_edt"
        android:layout_width="340dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Enter email address:"></EditText>

    <!-- ============ Address ================ -->
    <EditText
        android:id="@+id/address_edt"
        android:layout_width="340dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Enter street address:"></EditText>

    <!-- ============ MIN ================ -->

    <EditText
        android:id="@+id/min_edt"
        android:layout_width="340dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Enter MIN (12 numbers):"></EditText>

    <Button
        android:id="@+id/add_patient"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/addpatientbutton"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="25"
        android:text="Create new patient"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/Error"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:gravity="center_horizontal"
        android:textColor="#FF0000"
        android:textSize="14sp" />

</LinearLayout>